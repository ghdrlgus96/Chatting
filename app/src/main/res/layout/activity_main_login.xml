<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainLogin">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LoginID"
            android:hint="ID"
            app:layout_constraintStart_toStartOf="@+id/LoginPass" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginPass"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LoginPass"
            app:layout_constraintBaseline_toBaselineOf="@+id/SignIn" app:layout_constraintEnd_toStartOf="@+id/SignIn"
            android:layout_marginEnd="16dp" android:hint="password"/>
    <Button
            android:text="SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignIn"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="162dp"/>
    <Button
            android:text="SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignUp"
            app:layout_constraintStart_toStartOf="@+id/LoginPass" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPass"/>
</android.support.constraint.ConstraintLayout>