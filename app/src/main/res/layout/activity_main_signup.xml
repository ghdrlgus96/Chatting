<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainSignup">

    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OK" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="75dp" android:layout_marginBottom="95dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/SignUpName"
            android:hint="Name" app:layout_constraintStart_toStartOf="@+id/SignUpId" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/SignUpId"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/SignUpId"
            android:hint="ID" app:layout_constraintStart_toStartOf="@+id/SignUpPass" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/SignUpPass"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/SignUpPass"
            android:hint="password" android:layout_marginEnd="7dp"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="@+id/OK"
            app:layout_constraintBottom_toTopOf="@+id/OK"/>
</android.support.constraint.ConstraintLayout>