<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenu">

    <TextView
            android:text="Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserName" android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="MakeRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Make" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="205dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter" android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/Make" android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="@+id/Make"/>
    <Button
            android:text="exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exit" android:layout_marginTop="208dp"
            app:layout_constraintTop_toBottomOf="@+id/enter"
            app:layout_constraintEnd_toEndOf="@+id/enter"/>
    <Button
            android:text="myRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myRoom" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="@+id/exit"
            android:layout_marginBottom="78dp" app:layout_constraintBottom_toTopOf="@+id/exit"/>
</android.support.constraint.ConstraintLayout>